  <script>
    // Set year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Mobile menu toggle
    const burger = document.getElementById("burger");
    const mobileMenu = document.getElementById("mobileMenu");
    burger?.addEventListener("click", () => {
      mobileMenu.classList.toggle("show");
    });

    // Tabs (supports multiple tab groups on the page)
    const tabButtons = document.querySelectorAll(".tabBtn");
    tabButtons.forEach(btn => {
      btn.addEventListener("click", () => {
        // Find the nearest card/pad container so tabs don't interfere across sections
        const scope = btn.closest(".card") || document;

        // Buttons in same scope
        const scopedButtons = scope.querySelectorAll(".tabBtn");
        scopedButtons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");

        // Panels in same scope: use data-tab value to match id="tab-XYZ"
        const key = btn.getAttribute("data-tab");
        const scopedPanels = scope.querySelectorAll(".tabPanel");
        scopedPanels.forEach(p => p.classList.remove("active"));

        const panel = scope.querySelector("#tab-" + key);
        if (panel) panel.classList.add("active");
      });
    });
  </script>
</body>
